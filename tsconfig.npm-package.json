{
  "compilerOptions": {
    "target": "es5",
    "module": "commonJS",
    "declaration": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react-jsx",
    "removeComments": true
  },
  "include": ["src/lib", "src/custom.d.ts"],
  "exclude": [
    "node_modules",
    "src/example",
    "src/lib/mocks",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
